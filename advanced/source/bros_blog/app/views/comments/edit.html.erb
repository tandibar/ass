<h1>Editing comment</h1>

<%= error_messages_for :comment %>

<% form_for(@comment) do |f| %>
  <p>
    <b>Title</b><br />
    <%= f.text_field :title %>
  </p>

  <p>
    <b>Content</b><br />
    <%= f.text_area :content %>
  </p>

  <p>
    <b>Article</b><br />
    <%= f.text_field :article_id %>
  </p>

  <p>
    <b>Author email</b><br />
    <%= f.text_field :author_email %>
  </p>

  <p>
    <b>Author</b><br />
    <%= f.text_field :author_id %>
  </p>

  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Show', @comment %> |
<%= link_to 'Back', comments_path %>
