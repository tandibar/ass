<h1>New comment</h1>

<%= error_messages_for :comment %>

<% form_for :comment, :url => article_comments_path(:article_id => @comment.article.id) do |f| %>
  <p>
    <b>Content</b><br />
    <%= f.text_area :content %>
  </p>

  <p>
    <b>Author email</b><br />
    <%= f.text_field :author_email %>
  </p>

  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', article_path(params[:article_id]) %>
